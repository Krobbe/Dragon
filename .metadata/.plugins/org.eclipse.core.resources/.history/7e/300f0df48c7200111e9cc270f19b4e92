package Player;

public class Balance {
	private int balance;
	
	public Balance() {
		this(0);
	}
	
	public Balance(int bal) {
		balance = bal;
	}
	
	public int getBalance() {
		return balance;
	}
	
	public void addToBalance(int x) {
		balance = balance + x;
	}
	
	public void removeFromBalance(int x) {
		balance = balance - x;
	}
}
