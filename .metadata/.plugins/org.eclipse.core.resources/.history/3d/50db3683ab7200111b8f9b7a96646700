package Game;

import java.util.LinkedList;
import java.util.List;

public class Dealer {
	private Deck d;
	
	public Dealer() {
		d = new Deck();
	}
	
	public Card popCard() {
		return d.popCard();
	}
	
	public List<Card> getFlop() {
		Card tmp1 = d.popCard();
		Card tmp2 = d.popCard();
		Card tmp3 = d.popCard();
		
		List<Card> flop = new LinkedList<Card>();
		flop.add(tmp1);
		flop.add(tmp2);
		flop.add(tmp3);
		
		return flop;
	}
}
